<%- include('partials/header') %>

<div class="space-y-12">

    <!-- ================= TOP SUMMARY CARD ================= -->
    <div class="relative overflow-hidden rounded-3xl 
        bg-gradient-to-br from-indigo-600 via-purple-600 to-indigo-700
        text-white shadow-2xl">

        <!-- Decorative blobs -->
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-black/10 rounded-full blur-3xl"></div>

        <div class="relative p-8 sm:p-12 grid grid-cols-1 lg:grid-cols-3 gap-10 items-center">

            <!-- Welcome Text -->
            <div class="lg:col-span-2">
                <div
                    class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/20 text-xs font-semibold mb-6">
                    <span class="relative flex h-2 w-2">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-green-400"></span>
                    </span>
                    System Online
                </div>

                <h1 class="text-4xl sm:text-5xl font-extrabold font-display leading-tight mb-4">
                    Selamat Datang di <br />
                    <span class="text-indigo-100">InvBrg System</span>
                </h1>

                <p class="text-indigo-100/90 max-w-xl text-base sm:text-lg">
                    Sistem informasi manajemen inventaris barang yang efisien, terstruktur,
                    dan siap digunakan untuk operasional harian.
                </p>
            </div>

            <!-- Quick Stats -->
            <div
                class="bg-white/15 backdrop-blur-md rounded-2xl p-6 flex justify-around gap-6 text-center">
                <div>
                    <div class="text-4xl font-bold"><%= barangCount %></div>
                    <div class="text-xs uppercase tracking-wider text-indigo-100 font-semibold">
                        Total Barang
                    </div>
                </div>

                <div class="w-px bg-white/30"></div>

                <div>
                    <div class="text-4xl font-bold"><%= penggunaCount %></div>
                    <div class="text-xs uppercase tracking-wider text-indigo-100 font-semibold">
                        Pengguna Aktif
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- ================= QUICK ACTION ================= -->
    <div>
        <h2 class="text-xl font-bold text-slate-700 mb-6">
            Akses Cepat
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

            <!-- Manajemen Barang -->
            <div
                class="group relative overflow-hidden rounded-3xl bg-white/80 backdrop-blur-sm p-8 shadow-xl shadow-slate-200/50 hover:shadow-2xl hover:shadow-indigo-200/50 transition-all duration-300 border border-white hover:-translate-y-1">

                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-indigo-50 rounded-bl-full -mr-8 -mt-8 group-hover:scale-110 transition-transform">
                </div>

                <div class="relative z-10">
                    <div class="flex items-start justify-between mb-6">
                        <div
                            class="w-14 h-14 rounded-2xl bg-indigo-600 flex items-center justify-center text-white text-2xl shadow-lg shadow-indigo-200 group-hover:rotate-6 transition-transform">
                            <i class="fa-solid fa-boxes-stacked"></i>
                        </div>
                        <span class="px-3 py-1 rounded-full bg-indigo-100 text-indigo-700 text-xs font-bold">
                            <%= barangCount %> Item
                        </span>
                    </div>

                    <h3 class="text-2xl font-bold text-slate-800 mb-3 font-display">
                        Manajemen Barang
                    </h3>
                    <p class="text-slate-500 mb-8 leading-relaxed text-sm">
                        Kelola data barang, stok, dan informasi produk secara lengkap
                        dan terorganisir.
                    </p>

                    <div class="grid grid-cols-2 gap-4">
                        <a href="/barang"
                            class="flex items-center justify-center gap-2 px-4 py-3 rounded-xl bg-slate-50 text-indigo-600 font-semibold text-sm hover:bg-indigo-600 hover:text-white transition border">
                            <i class="fa-solid fa-list-ul"></i> Lihat Data
                        </a>
                        <a href="/barang/create"
                            class="flex items-center justify-center gap-2 px-4 py-3 rounded-xl bg-indigo-50 text-indigo-700 font-semibold text-sm hover:bg-indigo-600 hover:text-white transition border border-indigo-100">
                            <i class="fa-solid fa-plus"></i> Tambah Baru
                        </a>
                    </div>
                </div>
            </div>

            <!-- Manajemen Pengguna -->
            <div
                class="group relative overflow-hidden rounded-3xl bg-white/80 backdrop-blur-sm p-8 shadow-xl shadow-slate-200/50 hover:shadow-2xl hover:shadow-purple-200/50 transition-all duration-300 border border-white hover:-translate-y-1">

                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-purple-50 rounded-bl-full -mr-8 -mt-8 group-hover:scale-110 transition-transform">
                </div>

                <div class="relative z-10">
                    <div class="flex items-start justify-between mb-6">
                        <div
                            class="w-14 h-14 rounded-2xl bg-purple-600 flex items-center justify-center text-white text-2xl shadow-lg shadow-purple-200 group-hover:rotate-6 transition-transform">
                            <i class="fa-solid fa-users-gear"></i>
                        </div>
                        <span class="px-3 py-1 rounded-full bg-purple-100 text-purple-700 text-xs font-bold">
                            <%= penggunaCount %> Staff
                        </span>
                    </div>

                    <h3 class="text-2xl font-bold text-slate-800 mb-3 font-display">
                        Manajemen Pengguna
                    </h3>
                    <p class="text-slate-500 mb-8 leading-relaxed text-sm">
                        Kelola akun pengguna, otorisasi akses,
                        dan aktivitas sistem.
                    </p>

                    <div class="grid grid-cols-2 gap-4">
                        <a href="/pengguna"
                            class="flex items-center justify-center gap-2 px-4 py-3 rounded-xl bg-slate-50 text-purple-600 font-semibold text-sm hover:bg-purple-600 hover:text-white transition border">
                            <i class="fa-solid fa-list-ul"></i> Lihat Data
                        </a>
                        <a href="/pengguna/create"
                            class="flex items-center justify-center gap-2 px-4 py-3 rounded-xl bg-purple-50 text-purple-700 font-semibold text-sm hover:bg-purple-600 hover:text-white transition border border-purple-100">
                            <i class="fa-solid fa-user-plus"></i> Tambah Baru
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

<%- include('partials/footer') %>
